            <dependency>
                <groupId>org.jboss.seam.examples</groupId>
                <artifactId>seampay-web</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>org.jboss.seam.examples</groupId>
                <artifactId>seampay-ear</artifactId>
